{
    "_comment": "Build with `packer build centos.json`",
    "builders": [
	{
	    "boot_command": [
		"<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter>"
	    ],
	    "disk_size": "{{ user `disk_size` }}",
	    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
	    "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
	    "hard_drive_interface": "sata",
	    "headless": "{{ user `headless` }}",
	    "http_directory": "{{ user `http_directory` }}",
	    "iso_checksum": "{{ user `iso_checksum` }}",
	    "iso_checksum_type": "{{ user `iso_checksum_type` }}",
	    "iso_urls": [
		"{{ user `iso_path` }}/{{ user `iso_name` }}",
		"{{ user `iso_url` }}"
	    ],
	    "output_directory": "output-{{ user `vm_name` }}-virtualbox-iso",
	    "shutdown_command": "{{ user `shutdown_command` }}",
	    "ssh_password": "{{ user `ssh_password` }}",
	    "ssh_username": "{{ user `ssh_username` }}",
	    "ssh_wait_timeout": "10000s",
	    "type": "virtualbox-iso",
	    "vboxmanage": [
		[
		    "modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"
		],
		[
		    "modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"
		],
		[
		    "modifyvm", "{{.Name}}", "--paravirtprovider", "{{ user `virtualbox_paravirtprovider` }}"
		],
		[
		    "modifyvm", "{{.Name}}", "--nictype1", "virtio"
		],
		[
		    "modifyvm", "{{.Name}}", "--audio", "none"
		]

	    ],
	    "virtualbox_version_file": ".vbox_version",
	    "vm_name": "{{ user `vm_name` }}"
	}
    ],
    "post-processors": [
	{
	    "keep_input_artifact": false,
	    "output": "box/{{.Provider}}/{{user `vm_name`}}-{{user `version`}}.box",
	    "type": "vagrant",
	    "vagrantfile_template": "{{ user `vagrantfile_template` }}"
	}
    ],
    "provisioners": [
	{
	    "type": "shell",
	    "environment_vars": [
		"CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
		"DESKTOP={{user `desktop`}}",
		"UPDATE={{user `update`}}",
		"INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
		"SSH_USERNAME={{user `ssh_username`}}",
		"SSH_PASSWORD={{user `ssh_password`}}",
		"http_proxy={{user `http_proxy`}}",
		"https_proxy={{user `https_proxy`}}",
		"ftp_proxy={{user `ftp_proxy`}}",
		"rsync_proxy={{user `rsync_proxy`}}",
		"no_proxy={{user `no_proxy`}}"
	    ],
	    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
	    "scripts": [
		"script/zola-pre.sh",
		"script/update.sh",
		"script/kernel.sh",
		"script/kernel-post.sh"
	    ],
	    "type": "shell",
	    "expect_disconnect": "true"
	},
	{
	    "type": "shell",
	    "environment_vars": [
		"CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
		"DESKTOP={{user `desktop`}}",
		"UPDATE={{user `update`}}",
		"INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
		"SSH_USERNAME={{user `ssh_username`}}",
		"SSH_PASSWORD={{user `ssh_password`}}",
		"http_proxy={{user `http_proxy`}}",
		"https_proxy={{user `https_proxy`}}",
		"ftp_proxy={{user `ftp_proxy`}}",
		"rsync_proxy={{user `rsync_proxy`}}",
		"no_proxy={{user `no_proxy`}}"
	    ],
	    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
	    "scripts": [
		"script/fix-slow-dns.sh",
		"script/sshd.sh",
		"script/vagrant.sh",
		"script/virtualbox.sh",
		"script/motd.sh",
		"custom-script.sh"
	    ],
	    "type": "shell",
	    "pause_before": "10s"
	},
	{
	    "type": "chef-solo",
	    "version": "14.2.0",
	    "cookbook_paths": ["/web/tools/vagrant/cookbooks"],
	    "run_list": [
		"recipe[yum]",
		"recipe[runit]",
		"recipe[yum-epel]",
		"recipe[build-essential]",
		"recipe[poise-python]",
		"recipe[npm::remove]",
		"recipe[nodejs]",
		"recipe[firefox]",
		"recipe[xvfb]",
		"recipe[zola::default_for_packer]",
		"recipe[sc-mongodb::default]",
		"recipe[sc-mongodb::user_management]",
		"recipe[java]",
		"recipe[scala]",
		"recipe[activator]",
		"recipe[maven]",
		"recipe[mosql]",
		"recipe[ulimit]",
		"recipe[redisio::install]",
		"recipe[redisio::configure]",
		"recipe[redisio::enable]",
		"recipe[zola::post-install]"
	    ],
	    "json": {
		"firefox" : {
		    "version" : "60.4.0"
		},
		"java" : {
		    "oracle" : {
			"accept_oracle_download_terms" : true
		    },
		    "install_flavor" : "oracle",
		    "jdk_version" : "8",
		    "jdk" : {
			"8" : {
			    "x86_64" : {
				"url" : "http://download.oracle.com/otn-pub/java/jdk/8u192-b12/750e1c8617c5452694857ad95c3ee230/jdk-8u192-linux-x64.tar.gz",
				"checksum" : "6d34ae147fc5564c07b913b467de1411c795e290356538f22502f28b76a323c2"
			    }
			}
		    }
		},
		"maven" : {
		    "3" : {
			"version" : "3.5.4",
			"checksum" : "ce50b1c91364cb77efe3776f756a6d92b76d9038b0a0782f7d53acf1e997a14d"
		    },
		    "mavenrc" : {
			"opts" : "-Xmx384m"
		    }
		},
		"scala" : {
		    "url" : "http://downloads.lightbend.com/scala/2.11.8/scala-2.11.8.tgz",
		    "version" : "2.11.8",
		    "checksum" : "87fc86a19d9725edb5fd9866c5ee9424cdb2cd86b767f1bb7d47313e8e391ace"
		},
		"mongodb" : {
		    "key_file_content" : "randomstring",
		    "package_version" : "3.6.9",
		    "config" : {
			"auth" : true,
			"mongod" : {
			    "security" : {
				"authorization" : "enabled",
				"keyFile" : "/etc/mongod.keyfile",
				"transitionToAuth" : "true"
			    }
			}
		    },
		    "users" : [
			{ "username" : "dev_zola",
			  "password" : "dev_password",
			  "roles" : ["readWriteAnyDatabase"],
			  "database" : "admin"
			}
		    ]
		},
		"redisio" : {
		    "servers" : [
			{"address" : "0.0.0.0", "protected_mode" : "no",  "port" : 6379}
		    ],
		    "safe_install" : false,
		    "version" : "3.2.10"
		}
	    }
	},
	{
	    "type": "shell",
	    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
	    "scripts": [
		"script/cleanup.sh"
	    ],
	    "type": "shell",
	    "pause_before": "10s"
	}
    ],
    "variables": {
	"cleanup_build_tools": "false",
	"cpus": "1",
	"desktop": "false",
	"disk_size": "65536",
	"ftp_proxy": "{{env `ftp_proxy`}}",
	"headless": "",
	"http_directory": "kickstart/centos7",
	"http_proxy": "{{env `http_proxy`}}",
	"https_proxy": "{{env `https_proxy`}}",
	"install_vagrant_key": "true",
	"iso_checksum": "ec7500d4b006702af6af023b1f8f1b890b6c7ee54400bb98cef968b883cd6546",
	"iso_checksum_type": "sha256",
	"iso_name": "CentOS-7-x86_64-DVD-1708.iso",
	"iso_path": "iso",
	"iso_url": "http://mirrors.kernel.org/centos/7.4.1708/isos/x86_64/CentOS-7-x86_64-DVD-1708.iso",
	"kickstart": "ks.cfg",
	"memory": "512",
	"no_proxy": "{{env `no_proxy`}}",
	"parallels_guest_os_type": "centos",
	"rsync_proxy": "{{env `rsync_proxy`}}",
	"shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
	"ssh_password": "vagrant",
	"ssh_username": "vagrant",
	"update": "true",
	"vagrantfile_template": "",
	"version": "0.1.00",
	"virtualbox_guest_os_type": "RedHat_64",
	"virtualbox_paravirtprovider": "default",
	"virtualbox_nictype": "virtio",
	"vm_name": "centos7",
	"vmware_guest_os_type": "centos-64"
    }
}
